@model IEnumerable<LiquorStore.Models.Product>

@{
    ViewData["Title"] = "Home";
    var topCategories = new[] { "Whiskey", "Wine", "Vodka" };
}

@if (User.Identity.IsAuthenticated)
{
    <p>Welcome @User.Identity.Name</p>
}

<div class="text-center my-5">
    <h1 style="font-size: 75px; font-family: 'Brush Script MT';">J & A Liquor and Spirits</h1>
</div>

<div>
    <img class="img-fluid" src="~/Images/title.jpg" alt="Promo Banner" />
</div>

<div class="container my-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h2>Discover Our Collection</h2>
            <p>Explore our full range of products—from rare finds to everyday favourites. Whether you're hosting or gifting, we've got the perfect taste waiting for you.</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-dark rounded-pill text-white">Browse All Products</a>
        </div>
        <div class="col-md-6">
            <img class="img-fluid rounded shadow" src="~/Images/liquors.jpg" alt="Liquors" style="height: 300px; object-fit: cover; width: 100%;" />
        </div>
    </div>
</div>

<div class="container my-5">
    <h2 class="text-center mb-4">Featured Tastes</h2>
    <div class="row">
        @foreach (var item in Model.Take(3))
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (item.Image != null && item.Image.Length > 0)
                    {
                        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))" class="card-img-top" style="height: 300px; object-fit: contain;" />
                    }
                    else
                    {
                        <img src="~/Images/251876.jpg.thumb.319.319.png" class="card-img-top" style="height: 300px; object-fit: contain;" />
                    }
                    <div class="card-body text-center">
                        <h5 class="card-title">@Html.ActionLink(item.Name, "Details", "Product", new { id = item.Id }, new { @class = "text-dark" })</h5>
                        <p class="card-text">@item.Brand<br />@item.Category<br />$@item.Price</p>
                        <button class="btn btn-dark btn-sm add-to-cart" data-product-id="@item.Id">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="container my-5">
    <h2 class="text-center mb-4">Top Categories</h2>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        @foreach (var category in topCategories)
        {
            <div class="col">
                <div class="position-relative text-white">
                    <a asp-controller="Product" asp-action="CategoryProducts" asp-route-category="@category" class="text-decoration-none text-white">
                        <img src="~/images/@category.ToLower().Replace(" ", "-").Replace("&", "and").Replace(".", "")-category.jpg"
                             alt="@category"
                             class="img-fluid rounded shadow w-100"
                             style="height: 200px; object-fit: cover;" />
                        <h5 class="position-absolute top-50 start-50 translate-middle text-center bg-dark bg-opacity-50 px-3 py-2 rounded">
                            @category
                        </h5>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<script>
    $(document).on("click", ".add-to-cart", function () {
        var productId = $(this).data("product-id");
        var button = $(this);

        $.ajax({
            url: '@Url.Action("AddToCart", "Cart")',
            type: 'POST',
            data: { productId: productId },
            success: function (response) {
                if (response.success) {
                    $("#cartItemCount").text(response.itemCount);
                    $("#cartGrandTotal").text("$" + response.grandTotal.toFixed(2));
                    toastr.success('Item added to cart');
                } else {
                    toastr.error(response.message);
                }
            }
        });
    });
</script>
