@model List<string>

<h2>Product Categories</h2>

<div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 40px; width: 50%; margin: 0 auto; justify-content: center; align-items: center;">

    @foreach (var category in Model)
    {
        <div style="border-radius: 8px; ">
            <a asp-action="CategoryProducts" asp-route-category="@category">
                <h3>@category</h3>
            </a>
        </div>
    }
</div>
