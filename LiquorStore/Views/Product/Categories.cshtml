@{
    ViewBag.Title = "Categories";
}


<div class="bg-dark text-white text-center py-5">
    <h1 class="display-4">J & A Liquor Categories</h1>
</div>


<div class="text-center my-4">
    <h4>Discover amazing brands and new tastes</h4>
    <p>
        Explore a curated selection of spirits and wines. Whether you're a connoisseur or a casual sipper, 
        our range brings you exceptional flavors from around the world. Find your next favorite bottle today.
    </p>
</div>


<div class="container my-5">
    <div class="row align-items-center">
     
        <div class="col-md-6 mb-4 mb-md-0">
            <h4>Come View Our New Wine Section</h4>
            <p>
                Our wine collection features rich reds, crisp whites, and everything in between. 
                Experience quality and taste from renowned vineyards at unbeatable prices.
            </p>
            <a asp-action="CategoryProducts" asp-route-category="Wine" class="btn btn-dark rounded-pill text-white">
                View Wines
            </a>
        </div>

        
        <div class="col-md-6">
            <img src="~/images/wine-section.jpg" alt="Wine section" class="img-fluid rounded">
        </div>
    </div>
</div>


<div class="container my-5">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
        @foreach (var category in new[] { "Whiskey", "Cognac", "Vodka", "Tequila", "Rum", "Champagne", "Liqueur", "Wine" })
        {
            <div class="col">
                <div class="position-relative text-white">
                    <a asp-action="CategoryProducts" asp-route-category="@category" class="text-decoration-none text-white">
                        <img src="~/images/@category.ToLower().Replace(" ", "-").Replace("&", "and").Replace(".", "")-category.jpg" 
                             alt="@category"
                             class="img-fluid rounded shadow w-100"
                             style="height: 200px; object-fit: cover;" />
                        <h5 class="position-absolute top-50 start-50 translate-middle text-center bg-dark bg-opacity-50 px-3 py-2 rounded">
                            @category
                        </h5>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

