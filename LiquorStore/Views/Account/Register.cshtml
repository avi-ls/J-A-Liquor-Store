<!-- Register View -->
@model LiquorStore.Models.Account

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container-md mt-5">
        <div class="card shadow-lg mx-auto" style="max-width: 600px;">
            <div class="card-header bg-dark text-white">
                <h3 class="card-title text-center mb-0">Create Account</h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label">First Name</label>
                            <input asp-for="FirstName" class="form-control form-control-lg" placeholder="John">
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label">Last Name</label>
                            <input asp-for="LastName" class="form-control form-control-lg" placeholder="Doe">
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="john@example.com">
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control form-control-lg" placeholder="+1 234 567 890">
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="UserName" class="form-label">Username</label>
                            <input asp-for="UserName" class="form-control form-control-lg" placeholder="Choose username">
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="••••••••">
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-outline-dark btn-lg">Register</button>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-transparent">
                <div class="text-center small">
                    Already have an account? <a asp-action="Login" class="text-decoration-none">Sign in here</a>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>