@{
    var subtotal = (decimal)ViewBag.Subtotal;
    var tax = (decimal)ViewBag.Tax;
    var shipping = (decimal)ViewBag.Shipping;
    var total = (decimal)ViewBag.Total;
}

<h2>Checkout</h2>
<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Order Summary</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Subtotal:</span>
                        <span>$@subtotal.ToString("0.00")</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Tax (13%):</span>
                        <span>$@tax.ToString("0.00")</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Shipping:</span>
                        <span>$@shipping.ToString("0.00")</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between fw-bold">
                        <span>Grand Total:</span>
                        <span>$@total.ToString("0.00")</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <form asp-action="PlaceOrder" method="post">
            <div class="form-group">
                <label>First Name</label>
                <input name="customerFirstName" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input name="customerLastName" class="form-control" required />
            </div>

            <!-- Other fields that won't be saved -->
            <div class="form-group">
                <label>Phone Number</label>
                <input name="phone" type="tel" class="form-control" required />
            </div>

            <div class="form-group">
                <label>Address</label>
                <input name="address" class="form-control" required />
            </div>

            <div class="form-group">
                <label>Email</label>
                <input name="email" type="email" class="form-control" required />
            </div>

            <input type="hidden" name="total" value="@total" />

            <button type="submit" class="btn btn-success mt-3">Place Order</button>
        </form>
    </div>
</div>