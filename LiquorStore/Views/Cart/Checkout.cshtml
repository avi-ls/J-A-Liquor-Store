@{
    var total = (decimal)TempData["Total"];
}

<h2>Checkout</h2>
<div class="row">
    <div class="col-md-6">
        <h4>Order Total: $@total.ToString("0.00")</h4>
    </div>

    <div class="col-md-6">
        <form asp-action="PlaceOrder" method="post">
            <div class="form-group">
                <label>First Name</label>
                <input name="customerFirstName" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input name="customerLastName" class="form-control" required />
            </div>

            <!-- Other fields that won't be saved -->
            <div class="form-group">
                <label>Phone Number</label>
                <input name="phone" type="tel" class="form-control" required />
            </div>

            <div class="form-group">
                <label>Address</label>
                <input name="address" class="form-control" required />
            </div>

            <div class="form-group">
                <label>Email</label>
                <input name="email" type="email" class="form-control" required />
            </div>

            <input type="hidden" name="total" value="@total" />

            <button type="submit" class="btn btn-success mt-3">Place Order</button>
        </form>
    </div>
</div>