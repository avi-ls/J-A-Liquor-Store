<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LiquorStore</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LiquorStore.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body style="margin-bottom: 0px;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3"
            style="width: 100%">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-family: bru">J & A </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customer"
                                asp-action="Index">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Order"
                                asp-action="Index">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Employee"
                                asp-action="Index">Employees</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product"
                                asp-action="Index">Alcohols</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-controller="Product" asp-action="Categories">Categories</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br>

    <footer >
        <div class="container items-center">
        <div  class="row align-items-start">
            <div class="col">
            <ul>
                <li>
                    <h3 style="color: white;">Site Links</h3>
                </li>
                <li class="foot-item">
                    <a class="text-light link-underline link-underline-opacity-0" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="foot-item">
                    <a class="text-light link-underline link-underline-opacity-0"  asp-controller="Customer" asp-action="Index">Customers</a>
                </li>
                <li class="foot-item">
                    <a class="text-light link-underline link-underline-opacity-0"  asp-controller="Order" asp-action="Index">Orders</a>
                </li>
                <li class="foot-item">
                    <a class="text-light link-underline link-underline-opacity-0"  asp-controller="Employee" asp-action="Index">Employees</a>
                </li>
                <li class="foot-item">
                    <a class="text-light link-underline link-underline-opacity-0"  asp-controller="Product" asp-action="Index">Alcohols</a>
                </li>
                <li class="foot-item">
                    <a class="text-light link-underline link-underline-opacity-0" asp-controller="Product" asp-action="Categories">Categories</a>
                </li>
            </ul>
            </div>
            <div class="col d-flex justify-content-center flex-wrap">
                <h3 style="color: white; width: 100%; text-align: center;">Connect With Us</h3>
                <img style="width: 15%;" src="~/images/facebook.png" /> 
                <img style="width: 15%;" src="~/images/instagram.png" /> 
                <img style="width: 15%;" src="~/images/twitter.png" />  
            </div>
            <div class="col">
                <h3 style="color: white;">Sign Up For Emails</h3>
                <form action="post">
                    <input type="text">
                    <input type="button" value="Submit">
                </form>
            </div>
        </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
